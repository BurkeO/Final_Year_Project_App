<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioRecorderFragment">


    <burke.owen.fyp.RecordButton
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <burke.owen.fyp.PlayButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/record_button"
        app:layout_constraintTop_toBottomOf="@+id/record_button"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/recordingImageView"
        android:layout_width="293dp"
        android:layout_height="220dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/image_view_for_mic_and_spec"
        android:src="@android:drawable/ic_btn_speak_now"
        app:layout_constraintBottom_toTopOf="@+id/record_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/predictionsTextView"
        android:layout_width="343dp"
        android:layout_height="251dp"
        android:text="@string/textview"
        app:layout_constraintBottom_toTopOf="@+id/recordingImageView"
        app:layout_constraintEnd_toEndOf="@+id/recordingImageView"
        app:layout_constraintStart_toStartOf="@+id/recordingImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <TextView
        android:id="@+id/guessTextView"
        android:layout_width="327dp"
        android:layout_height="38dp"
        android:layout_marginBottom="1dp"
        android:text="@string/textview"
        app:layout_constraintBottom_toTopOf="@+id/predictionsTextView"
        app:layout_constraintEnd_toEndOf="@+id/predictionsTextView"
        app:layout_constraintStart_toStartOf="@+id/predictionsTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>